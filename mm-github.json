{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mattermost-github-integration",
    "creationTimestamp": null,
    "annotations": {
      "description": "mattermost-github-integration Example"
    }
  },
  "parameters": [
    {
      "name": "REPOS",
      "description": "Github reponames"
    },
    {
      "name": "MMURLS",
      "description": "Mattermost incoming webhook URL"
    },
    {
      "name": "CHANNELS",
      "description": "Mattermost incoming webhook URL"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "github-mm-integration",
        "labels": {
          "name": "github-mm-integration"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "github-mm-integration",
            "protocol": "TCP",
            "port": 5000,
            "targetPort": 5000,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "mattermost-github-integration"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Pod",
      "apiVersion": "v1",
      "metadata": {
        "name": "mattermost-github-integration",
        "labels": {
          "name": "mattermost-github-integration"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "mattermost-github-integration",
            "image": "registry.centos.org/mattermost/mattermost-github-integration:latest",
            "env": [
              {
                "name": "REPO_NAMES",
                "value": "${REPOS}"
              },              
              {
                "name": "HOOK_URLS",
                "value": "${MMURLS}"
              },
              {
                "name": "CHANNEL_NAMES",
                "value": "${CHANNELS}"
              }
            ]
          }
        ]
      }
    }
  ]
}
